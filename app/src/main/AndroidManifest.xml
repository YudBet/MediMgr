<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arashi.medimgr" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MediRecordActivity"
            android:label="@string/title_activity_medi_record" >
        </activity>
        <activity
            android:name=".MediAlarmsActivity"
            android:label="@string/title_activity_medi_alarms" >
        </activity>
        <activity
            android:name=".MediAddActivity"
            android:label="@string/title_activity_medi_add" >
        </activity>
        <activity
            android:name=".EnterHandActivity"
            android:label="@string/title_activity_enter_hand" >
        </activity>
        <activity
            android:name=".EnterPushActivity"
            android:label="@string/title_activity_enter_push" >
        </activity>
        <activity
            android:name=".EnterPicActivity"
            android:label="@string/title_activity_enter_pic" >
        </activity>
        <activity
            android:name=".EnterQRCodeActivity"
            android:label="@string/title_activity_enter_qrcode" >
        </activity>
        <activity
            android:name=".EnterResultActivity"
            android:label="@string/title_activity_enter_result" >
        </activity>
        <activity
            android:name=".TimeTakeActivity"
            android:label="@string/title_activity_time_take" >
        </activity>
    </application>

</manifest>
